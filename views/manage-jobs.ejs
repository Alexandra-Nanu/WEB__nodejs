<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Jobs</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="/public/style.css">
</head>

<body class="container" style="margin-top: 50px;">

    <h1>Manage Jobs</h1>
    <p><a href="/" class="btnprimary">Home</a></p>
    <p><a href="/logout" class="btndanger">Logout</a></p>

    <div class="mt-4">
        <h2>Jobs</h2>
        <br/>

        <button class="btn btn-secondary" onclick="location.href='/jobs/sort?order=ASC'">Sort by Salary Ascending</button>
        <button class="btn btn-secondary" onclick="location.href='/jobs/sort?order=DESC'">Sort by Salary Descending</button>
        <button onclick="location.href='/manage-jobs'" class="btn btn-danger">Reset Sorting</button>
        <br/>
        <br/>

        <table class="table table-striped table-bordered text-center">
            <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Company</th>
                <!--<th>Type</th>-->
                <!--<th>Experience level</th>-->
                <th>Salary (â‚¬)</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            <% jobs.forEach(job => { %>
                <tr>
                    <td><b><%= job.title %></b></td>
                    <td><b><%= job.company %></b></td>
                    <td><b><%= job.salary %></b></td>
                    <td>
                        <a href="/view-job/<%= job.id %>" class="btn btnprimary btn-sm">View</a>
                        <a href="/edit-job/<%= job.id %>" class="btn btnprimary btn-sm">Edit</a>
                        <a href="/delete-job/<%= job.id %>" class="btn btndanger btn-sm">Delete</a>
                    </td>
                </tr>
            <% }) %>
            </tbody>
        </table>
    </div>


    <p><a href="/add-job" class="btn btn-primary mt-3">Add Job</a></p>

</body>

</html>